{
  "name": "branded-static-boilerplate",
  "version": "1.0.0",
  "description": "A self-documenting static website boilerplate with embedded knowledge",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix && stylelint src/**/*.css --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "security": "node scripts/security-audit.js",
    "generate": "node scripts/generate-component.js",
    "deploy": "npm run build && gh-pages -d dist",
    "prepare": "husky install",
    "prebuild": "rm -rf dist",
    "postbuild": "npm run generate:sitemap && echo 'Build completed successfully!'",
    "setup": "node scripts/setup.js",
    "postinstall": "husky install || true",
    "validate": "npm run lint && npm run test:coverage && npm run format:check",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "analyze": "npm run test:coverage && npm run lighthouse && npm run security",
    "analyze:bundle": "ANALYZE=true npm run build && npm run analyze:size",
    "analyze:size": "node scripts/analyze-bundle.js",
    "analyze:performance": "node scripts/performance-monitor.js",
    "analyze:full": "npm run analyze:bundle && npm run analyze:performance",
    "build:analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:report": "npm run build:analyze && open dist/stats.html",
    "monitor:performance": "npm run analyze:performance -- --continuous",
    "lighthouse:local": "node scripts/lighthouse-local.js",
    "lighthouse:mobile": "node scripts/lighthouse-local.js -- --mobile",
    "lighthouse:ci": "lhci autorun",
    "generate:sitemap": "node scripts/generate-sitemap.js"
  },
  "keywords": [
    "static-site",
    "boilerplate",
    "html",
    "css",
    "javascript",
    "github-pages",
    "self-documenting"
  ],
  "author": "BSB Community",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.0",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.53.0",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.8.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "canvas": "^2.11.2",
    "chalk": "^5.4.1",
    "css": "^3.0.0",
    "cssnano": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "lighthouse": "^12.6.1",
    "open": "^10.1.2",
    "playwright": "^1.53.0",
    "playwright-core": "^1.53.0",
    "postcss": "^8.4.32",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "puppeteer": "^24.10.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.26.0",
    "vite": "^6.3.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-image-optimizer": "^1.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madfam-io/branded-static-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/madfam-io/branded-static-boilerplate/issues"
  },
  "homepage": "https://madfam-io.github.io/branded-static-boilerplate"
}
