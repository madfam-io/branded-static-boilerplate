{
  "name": "branded-static-boilerplate",
  "version": "1.0.0",
  "description": "A self-documenting static website boilerplate with embedded knowledge",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.js && stylelint src/**/*.css",
    "format": "prettier --write .",
    "test": "jest",
    "generate": "node scripts/generate-component.js",
    "deploy": "npm run build && gh-pages -d dist",
    "prepare": "husky install",
    "prebuild": "rm -rf dist",
    "postbuild": "echo 'Build completed successfully!'",
    "setup": "node scripts/setup.js",
    "postinstall": "husky install || true"
  },
  "keywords": [
    "static-site",
    "boilerplate",
    "html",
    "css",
    "javascript",
    "github-pages",
    "self-documenting"
  ],
  "author": "BSB Community",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-plugin-html": "^3.2.0",
    "postcss": "^8.4.32",
    "postcss-preset-env": "^9.3.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "terser": "^5.26.0",
    "eslint": "^8.56.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "axe-core": "^4.8.3",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/branded-static-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/branded-static-boilerplate/issues"
  },
  "homepage": "https://yourusername.github.io/branded-static-boilerplate"
}