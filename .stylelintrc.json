{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "selector-class-pattern": [
      "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
      {
        "message": "Expected class selector to follow BEM methodology (block__element--modifier)"
      }
    ],
    "no-descending-specificity": null
  },
  "ignoreFiles": [
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    "**/*.js",
    "**/*.json"
  ]
}